{
  "name": "monorepo-starter-kit",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md,mdx,yaml,yml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,md,mdx,yaml,yml}\"",
    "check-types": "turbo run check-types"
  },
  "devDependencies": {
    "@tools/prettier": "workspace:*",
    "prettier": "^3.7.4",
    "turbo": "^2.7.2",
    "typescript": "5.9.2"
  },
  "prettier": "@tools/prettier",
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}